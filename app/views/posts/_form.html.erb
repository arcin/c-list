<section class="row">
  <div class="col-md-6 col-md-offset-3 center">
    <%= form_for [@category, @post] do |f|%>

      <%= render partial: 'shared/model_form_errors', locals: { model: @post } %>
      <%= f.hidden_field :category_id, value: @category.id if @category %>

      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :price %>
        <%= f.number_field :price, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit "Publish", class: "btn btn-success"%>
      </div>
    <% end %>
  </div>
</section>